@model IEnumerable<Unidad2Actividad2Perros.Models.ViewModels.PaisViewModels>
@{
    Layout = "_Layout";
}
<section class="nav">
    <h3>Razas por país</h3>
    <nav>
        <a href="~/">Listado Alfabético de Razas</a>
    </nav>
</section>
<section class="list">
    @foreach (var pais in Model)
    {
        <h4>@pais.Nombre</h4>
        <ul>
            @foreach (var raza in pais.Raza)
            {
                <li>
                    <a href="~/Perro/@raza.Nombre.Replace(' ','-')">
                        <img src="~/imgs_perros/@(raza.Id)_0.jpg">
                        @raza.Nombre
                    </a>
                </li>
            }
        </ul>
    }
</section>
